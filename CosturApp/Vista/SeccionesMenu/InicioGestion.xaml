<UserControl x:Class="CosturApp.Vista.SeccionesMenu.InicioGestion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                <Image Source="/Imagenes/Logo/CosturApp.png"
                            Width="170" Height="170" Stretch="Uniform"/>
                <TextBlock Text="CosturApp" FontSize="36" FontWeight="Bold" Margin="5 0 0 0" VerticalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
            </StackPanel>

            <!-- Mensaje principal -->
            <TextBlock Text="Empieza a gestionar tu empresa" 
                       FontSize="20" TextAlignment="Center" Margin="0 0 0 20"
                       Foreground="{DynamicResource MaterialDesignBody}"/>

            <!-- Pie -->
            <TextBlock Text="2025 CosturApp - Gestión interna" HorizontalAlignment="Center" 
                       Foreground="{DynamicResource MaterialDesignSecondaryText}" FontSize="12"/>
        </StackPanel>
    </Grid>
</UserControl>
